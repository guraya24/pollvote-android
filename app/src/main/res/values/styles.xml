<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ProgressAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/app_base_color</item>
    </style>

    <style name="fullscreen_dialog" parent="AppTheme">
        <item name="android:windowNoTitle">false</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <!--   &lt;!&ndash; only width fill screen &ndash;&gt;
           <item name="android:windowMinWidthMajor">100%</item>
           <item name="android:windowMinWidthMinor">100%</item>-->
    </style>

    <!--BottomDialog Animation-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <style name="MaterialCardViewStyleAccount" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayMaterialCardView1</item>
    </style>

    <style name="ShapeAppearanceOverlayMaterialCardView1" parent="">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="BottomDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <!--        <item name="android:colorBackground">@android:color/transparent</item>-->

    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>