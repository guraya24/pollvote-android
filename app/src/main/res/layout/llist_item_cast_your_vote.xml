<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.pollvote.utils.customView.CustomTVRobbotRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/cast_your_vote"
        android:textColor="@color/color_black"
        android:textSize="20sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/ll_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="150dp"
                    android:orientation="vertical">


                    <com.pollvote.utils.customView.CustomTVRobbotRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:text="@string/secretary"
                        android:textColor="@color/color_black"
                        android:textSize="18sp" />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_un_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tarun_bowman"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/democratic_party"
                            android:textColor="@color/color_black"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/asiyah_flower"
                            android:textColor="@color/color_white"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/republican_party"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_un_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tarun_bowman"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/democratic_party"
                            android:textColor="@color/color_black"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_un_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/asiyah_flower"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/republican_party"
                            android:textColor="@color/color_black"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/ll_event2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="150dp"
                    android:orientation="vertical">


                    <com.pollvote.utils.customView.CustomTVRobbotRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:text="@string/head_cleark"
                        android:textColor="@color/color_black"
                        android:textSize="18sp" />


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_un_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tarun_bowman"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/democratic_party"
                            android:textColor="@color/color_black"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_un_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/asiyah_flower"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/republican_party"
                            android:textColor="@color/color_black"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_selection"
                        android:padding="15dp"
                        android:weightSum="2">


                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tarun_bowman"
                            android:textColor="@color/color_white"
                            android:textSize="14sp" />

                        <com.pollvote.utils.customView.CustomTVRobbotLite
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/democratic_party"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv_event_candidate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp" />

    <com.pollvote.utils.customView.CustomButtonRobotoRegular
        android:id="@+id/btn_vote"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"

        android:background="@drawable/bg_button"
        android:text="@string/vote"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="16sp" />
</LinearLayout>